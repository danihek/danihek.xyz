body {
  font-family: Arial, sans-serif;
  margin: 0;
  padding: 0;
  background-color: #474a48;
}

h1 {
  text-align: center;
  margin-top: 20px;
  font-size: 2em;
  color: #dee3e0;
}

.gallery {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  padding: 20px;
}

.thumbnails img {
  width: 300px;
  height: 200px;
  margin: 10px;
  cursor: pointer;
  border-radius: 5px;
  transition: transform 0.3s ease-in-out;
  box-shadow: 0 0 8px rgba(0, 0, 0, 0.3);
}

.thumbnails img:hover {
  transform: scale(1.1);
}

.modal {
  display: none;
  position: fixed;
  z-index: 1000;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.9);
  overflow: auto;
}

.modal img {
  display: block;
  margin: auto;
  max-width: 80%;
  max-height: 80%;
  border-radius: 5px;
}

.close {
  color: #fff;
  font-size: 36px;
  position: absolute;
  top: 10px;
  right: 20px;
  cursor: pointer;
}
